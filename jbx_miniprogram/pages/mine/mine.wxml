<view class="item-wrap">
  <view class="item"></view>
  <view class="item" bindtap='toRanking'>
    <image class="icon" mode="aspectFit" src="../../img/award-icon.png"></image>
    <text>排行榜</text>
  </view>
  <view class="item" bindtap='toRule'>
    <image class="icon" mode="aspectFit" src="../../img/rule-icon.png"></image>
    <text>规则说明</text>
  </view>
  <view class="item" bindtap='toRecord'>
    <image class="icon" mode="aspectFit" src="../../img/record-icon.png"></image>
    <text>捐步记录</text>
  </view>
</view>

<view class="bottom">
  <button class="share-btn">要求好友一起捐步得100积分</button>
</view>
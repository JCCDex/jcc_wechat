  <image class="head" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1546418326710&di=36315e2c5bd3c0ddc605c5358f727f8d&imgtype=0&src=http%3A%2F%2Fimg.zcool.cn%2Fcommunity%2F0120045804f78ea84a0d304f8d366c.png"></image>
  <text class="nickname">小芹菜</text>
  <view class="view-wrap">
    <view class="view">
      <image class="view-btn" src="../../img/view-btn.png">点击查看</image>
      <view class="view-info">
        <image class="icon" src="../../img/view-icon.png"></image>
        <text class="txt">我的积分</text>
      </view>
    </view>
